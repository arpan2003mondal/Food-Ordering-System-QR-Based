<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/admin-header', { title: 'Edit Staff' }) %>
  </head>
  <body class="bg-gray-100 min-h-screen p-10 pt-24">
    <!-- Navigation Bar -->
    <%- include('./partials/admin-nav') %>

    <!-- Flash Messages -->
    <div class="fixed top-0 left-0 w-full z-50">
      <%- include('../partials/alert') %>
    </div>

    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-2xl font-semibold mb-6 text-gray-800 text-center">Edit Staff</h1>

      <form action="/admin/dashboard/update-staff/<%= staff._id %>" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-gray-700 font-medium mb-1">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            value="<%= staff.name %>"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <div>
          <label for="username" class="block text-gray-700 font-medium mb-1">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            value="<%= staff.username %>"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <div>
          <label for="password" class="block text-gray-700 font-medium mb-1">New Password (leave blank to keep current)</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter new password"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <div>
          <label for="salary" class="block text-gray-700 font-medium mb-1">Salary</label>
          <input
            type="number"
            name="salary"
            id="salary"
            value="<%= staff.salary %>"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
          />
        </div>

        <div>
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded"
          >
            Update
          </button>
        </div>
      </form>
    </div>

    
<%- include('./partials/admin-footer') %>

