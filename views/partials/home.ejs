<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

  

  <!-- Login Selection -->
  <div class="flex-grow flex items-center justify-center py-10">
    <div class="bg-white p-12 rounded-2xl shadow-2xl w-full max-w-md text-center">
      <h2 class="text-3xl font-extrabold mb-8 text-gray-800">
        Choose Login Type
      </h2>

      <!-- Admin Login Button -->
      <a href="/admin/login"
         class="block w-full bg-green-600 text-white py-3 rounded-full hover:bg-green-700 font-semibold text-lg shadow-md mb-6 transition duration-300">
        Admin Login
      </a>

      <!-- Staff Login Button -->
      <a href="/staff/login"
         class="block w-full bg-green-600 text-white py-3 rounded-full hover:bg-green-700 font-semibold text-lg shadow-md transition duration-300">
        Staff Login
      </a>
    </div>
  </div>

  <script src="/javascripts/flashMessages.js"></script>
</body>
</html>
